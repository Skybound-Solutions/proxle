rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function for admin check
    function isAdmin() {
      return request.auth != null && request.auth.token.email in ['banklam@skyboundmi.com', 'proxle@skyboundmi.com'];
    }

    // Users can read/write their own document, admins can read/write all
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Admin-only access to admin stats
    match /stats/{doc=**} {
      allow read, write: if isAdmin();
    }
    
    // Public read for supporters leaderboard
    match /leaderboard/{doc} {
      allow read: if true;
      allow write: if false; // Only via Cloud Functions
    }
  }
}
